echo "#################################################################"
echo "#               Export-then-import CA and OCSP                  #"
echo "#################################################################"

source qa/setenv.script

echo "Sleeping 1 second"
sleep 1

xi:rm -r -f output/dbexport

## Export CA
echo "============================================================================"
echo "||                             Export CA Database                         ||"
echo "============================================================================"

ca:export-ca --out-dir output/dbexport/ca --password 1234 \
  --caconf-db-conf ${CA_XIPKI_DIR}/etc/ca/database/caconf-db.properties \
  --db-conf ${CA_XIPKI_DIR}/etc/ca/database/ca-db.properties

## Export OCSP

echo "============================================================================"
echo "||                            Export OCSP Database                        ||"
echo "============================================================================"

ca:export-ocsp --out-dir output/dbexport/ocsp --password 1234 \
  --db-conf ${CA_XIPKI_DIR}/etc/ca/database/ocsp-db.properties

# Reset the CA and OCSP database

## Import CA

echo "============================================================================"
echo "||               Import CA Database (DBSCHEMA.VERSION=7)                  ||"
echo "============================================================================"

OS_NAME = $(osinfo --name)

## CA Database

DB_CONF = "${CA_XIPKI_DIR}/etc/ca/database/ca-db.properties"
ca:sql --force --db-conf "${DB_CONF}" xipki/sql/ca-init-v7-sql/ca-init.sql

ca:import-ca --in-dir output/dbexport/ca --password 1234 \
  --db-conf ${CA_XIPKI_DIR}/etc/ca/database/ca-db.properties

## Restart the CA

echo "Sleeping 1 second"
sleep 1

ca:restart

## Export CA
echo "============================================================================"
echo "||                Export CA Database (DBSCHEMA.VERSION=7)                  ||"
echo "============================================================================"

ca:export-ca --out-dir output/dbexport/ca-v7 --password 1234 \
  --db-conf ${CA_XIPKI_DIR}/etc/ca/database/ca-db.properties

DB_CONF = "${CA_XIPKI_DIR}/etc/ca/database/ca-db.properties"
ca:sql --force --db-conf "${DB_CONF}" qa/sql/qa-ca-init.sql

DB_CONF = "${CA_XIPKI_DIR}/etc/ca/database/caconf-db.properties"
ca:sql --force --db-conf "${DB_CONF}" qa/sql/qa-ca-init.sql

echo "============================================================================"
echo "||                             Import CA Database                         ||"
echo "============================================================================"

OS_NAME = $(osinfo --name)

## CA Database

DB_CONF = "${CA_XIPKI_DIR}/etc/ca/database/ca-db.properties"
ca:sql --force --db-conf "${DB_CONF}" xipki/sql/ca-init.sql

DB_CONF = "${CA_XIPKI_DIR}/etc/ca/database/caconf-db.properties"
ca:sql --force --db-conf "${DB_CONF}" xipki/sql/caconf-init.sql

ca:import-ca --in-dir output/dbexport/ca --password 1234 \
  --db-conf ${CA_XIPKI_DIR}/etc/ca/database/ca-db.properties \
  --caconf-db-conf ${CA_XIPKI_DIR}/etc/ca/database/caconf-db.properties

## Import OCSP

echo "============================================================================"
echo "||                            Import OCSP Database                        ||"
echo "============================================================================"

## OCSP Database

DB_CONF = "${CA_XIPKI_DIR}/etc/ca/database/ocsp-db.properties"
ca:sql --force --db-conf "${DB_CONF}" xipki/sql/ocsp-init.sql

ca:import-ocsp --in-dir output/dbexport/ocsp --password 1234 \
  --db-conf ${CA_XIPKI_DIR}/etc/ca/database/ocsp-db.properties

## Import OCSP FROM CA

echo "============================================================================"
echo "||                        IMPORT OCSP DATABASE FROM CA                    ||"
echo "============================================================================"

DB_CONF = "${CA_XIPKI_DIR}/etc/ca/database/ocsp-db.properties"
ca:sql --force --db-conf "${DB_CONF}" xipki/sql/ocsp-init.sql

ca:import-ocspfromca --in-dir output/dbexport/ca --password 1234 \
  --db-conf ${CA_XIPKI_DIR}/etc/ca/database/ocsp-db.properties

## Restart the CA

echo "Sleeping 1 second"
sleep 1

ca:restart
