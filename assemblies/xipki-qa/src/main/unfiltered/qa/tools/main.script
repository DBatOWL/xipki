echo "#################################################################"
CA_TYPE=DSA
echo "#                             ${CA_TYPE}"
echo "#################################################################"

TLS_PROFILE=certprofile-tls-dsa-ec.json

OUT_DIR=output/dsa

SIGNER_CONF="algo=SHA256withDSA,password=1234,keystore=file:${OUT_DIR}/ca/tls-ca.p12"

xi:dsa-p12 --password 1234 --out ${OUT_DIR}/ca/tls-ca.p12 --plen 2048

