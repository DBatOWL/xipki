{
	"basedir":"APP_DIR",
	"properties":{
		"profiles.dir":"qa/tools/certprofile",
		"token.type":"PKCS12",
		"ca.signerConf":"REPLACEME-CA_SIGNERCONF",
        "tls.profile":"REPLACEME-TLS_PROFILE"
	},
	"requestors":[{
		"name":"requestor1",
		"type":"cert",
		"binaryConf":{
			"file":"xipki/keycerts/tlskeys/client/tls-client-cert.der"
		}
	}],
	"publishers":[],
	"profiles":[{
		"name":"rootca",
		"type":"xijson",
		"conf":{
			"file":"${profiles.dir}/certprofile-rootca.json"
		}
	},{
		"name":"tls",
		"type":"xijson",
		"conf":{
			"file":"${profiles.dir}/${tls.profile}"
		}
	}],
	"cas":[{
		"name":"tls-ca",
		"caInfo":{
			"caUris":{
				"crlUris":[
					"http://localhost:8081/crl/?type=crl&name=tls-ca"
				],
				"ocspUris":[
					"http://localhost:8081/ocsp/responder1"
				]
			},
			"crlControl":{
				"interval.hours": 24,
				"fullcrl.intervals":7,
				"overlap":"3d",
				"interval.time":"02:00"
			},
			"keypairGenNames":["software"],
			"expirationPeriod":365,
			"genSelfIssued":{
				"subject":"REPLACEME-SUBJECT",
				"profile":"rootca",
				"serialNumber":"1"
			},
			"keepExpiredCertDays":-1,
			"maxValidity":"30y",
			"nextCrlNo":2,
			"permissions":["all"],
			"signerType":"${token.type}",
			"signerConf":{
				"value":"${ca.signerConf}"
			},
			"snSize":20,
			"status":"active",
			"validityMode":"cutoff"
		},
		"profiles":[
			"tls"
		],
		"publishers":[],
		"requestors":[{
			"requestorName":"requestor1",
			"permissions":[
				"all"
			],
			"profiles":[
				"all"
			]
		}]
	}]
}
