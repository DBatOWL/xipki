{
	"acme": {
		"baseUrl": "https://real.host.name:8445/acme/", // TODO: adapt it with the real host name
		"nonceNumBytes": 16,
		"tokenNumBytes": 16,
		"cacheSize": 1000,
		"syncDbSeconds": 60,
		"dbConf": "etc/acme/database/acme-db.properties",
		//"contactVerifier": "org.example.MyContactVerifier",
		//"termsOfService": "http://example.org/tos",
		"website": "http://example.org/doc/acme",
		//"caaIdentities": [
		//	"example.org"
		//],
		"challengeTypes": ["dns-01", "http-01", "tls-alpn-01"],
		"cleanupOrder": {
			"expiredCertDays": 390,
			"expiredOrderDays": 390
		},
		"caProfiles": [{
			"ca": "myca",
			"tlsProfile": "tls-ec",
			"keyTypes": ["1.2.840.10045.2.1"]
		}, {
			"ca": "myca",
			"tlsProfile": "tls-rsa",
			"keyTypes": ["1.2.840.113549.1.1.1"]
		}]
	},
	// To activate the logging of requests and responses, set writer.level to DEBUG
	// in the file META-INF/classes/log4j2.properties.
	"logReqResp":true,
	// valid values are NO, APACHE, NGINX, GENERAL
	//"reverseProxyMode":"GENERAL",
	"pop":{
		"sigAlgos":[
			"SHA256withRSA", "SHA256withECDSA", "SHA256withDSA",
			"SM3withSM2", "ED25519", "ED448", "DHPOP-X25519", "DHPOP-X448"
		]
	},
	"sdkClient":{
		"serverUrl":"https://localhost:8444/ca/ra/",
		"ssl":{
			"storeType":"pkcs12",
			"keystorePassword":"CHANGEIT",
			"keystore":{
				"file":"keycerts/ra-sdk-client.p12"
			},
			"trustanchors": [{
				"file":"keycerts/ca-server-cert.pem"
			}],
			// valid values: 'default' for standard verification, 'no_op' for no-operation, or
			// 'java:'<class implements javax.net.ssl.HostnameVerifier>
			"hostnameVerifier":"default"
		}
	},
	"audit":{
		"type":"embed",
		"conf": "file=${sys:catalina.home}/logs/acme-audit.log"
	},
	"security":{
		"keyStrongrandomEnabled":false,
		"signStrongrandomEnabled":false,
		"defaultSignerParallelism":10,
		"password":{
			"masterPasswordCallback":"FILE file=security/masterpassword.secret"
		},
		"signerFactories":[]
	}
}
